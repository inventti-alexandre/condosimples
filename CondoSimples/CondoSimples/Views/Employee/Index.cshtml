@model IEnumerable<CondoSimples.Models.EmployeeModel>

@{
    ViewBag.Title = "Funcionários";
}

<h2>Funcionários</h2>

@if (User.IsInRole("Sindico"))
{
    <p>
        @Html.ActionLink("Cadastrar novo funcionário", "Create")
    </p>
}

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr>
            <th class="user-photo">
                Foto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DutyDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkShift)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="user-photo">
                    <img src=@string.Concat("https://condosimplestg.blob.core.windows.net/fotostg/employee_", @item.ID,".jpg") alt="Foto do funcionário" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DutyDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkShift)
                </td>
                <td class="button-group">
                    @if (User.IsInRole("Sindico"))
                    {
                        @Html.ActionLink("Editar", "Edit", new { id = item.ID }) <br />
                        @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) <br />
                        @Html.ActionLink("Excluir", "Delete", new { id = item.ID })
                    }
                </td>
            </tr>
        }

    </table>
</div>