@model CondoSimples.Models.ScheduleModel

@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/jquery.maskedinput-1.1.4.pack.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<h2>Nova reserva</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Agenda de áreas comuns</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span class="text-danger">@ViewBag.Error</span>

        <div class="form-group">
            <label class="control-label col-md-2">Área</label>
            <div class="col-md-10">
                @Html.DropDownList("Places", null, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateSchedule, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="DateSchedule" class="form-control" />
                @Html.ValidationMessageFor(model => model.DateSchedule, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
