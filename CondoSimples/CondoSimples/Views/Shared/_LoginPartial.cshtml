@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right pull-right hidden-xs">
        <li class="hello-user">
            @Html.ActionLink(string.Concat("Olá ", @User.Identity.GetUserName(), "!"), "Edit", "User", new { logged = true }, new { @title = "Meus dados" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="logout">Sair</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">        
        <li class="login-btn">@Html.ActionLink("Entrar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
